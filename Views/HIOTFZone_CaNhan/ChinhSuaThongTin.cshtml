@model MXH_HIOTFZone.Models.NguoiDung

@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";

    Layout = "~/Views/Shared/HIOTFZone_Layout.cshtml";
}



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Chỉnh sửa thông tin cá nhân</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ChinhSuaThongTin", "HIOTFZone_CaNhan", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3 text-center">
                            <img src="~/Images/Avatar/@Model.Avatar" class="rounded-circle mb-2" style="width:120px; height:120px; object-fit:cover;" alt="Avatar" />
                            <div>
                                <label for="Avatar" class="form-label">Đổi ảnh đại diện</label>
                                <input type="file" class="form-control" name="Avatar" id="Avatar" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tên hiển thị: </label>
                            @Html.TextBoxFor(m => m.TenNguoiDung, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giới tính: </label>
                            @Html.DropDownListFor(m => m.GioiTinh, new SelectList(new[] { "Nam", "Nữ", "Khác" }), "Chọn giới tính", new { @class = "form-select" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sinh nhật: </label>
                            @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ: </label>
                            @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                            <a href="@Url.Action("TrangCaNhan","HIOTFZone_CaNhan")" class="btn btn-secondary ms-2">Hủy</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


