@model List<MXH_HIOTFZone.Models.BaiDang>

@{
    ViewBag.Title = "Quản lý bài viết";
    Layout = null;   // Không dùng layout
}

<!DOCTYPE html>
<html lang="vi">

<!-- ==== HEAD GIỐNG VIEW TÀI KHOẢN ==== -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f3f4f6;
            font-family: 'Segoe UI', sans-serif;
        }

        .admin-header {
            background: linear-gradient(90deg, #3b82f6, #06b6d4);
            padding: 20px;
            color: white;
            margin-bottom: 30px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

            .admin-header h2 {
                margin: 0;
                font-weight: 600;
            }
    </style>
</head>
<body>

    <!-- ==== HEADER ==== -->
    <div class="admin-header">
        <h2>Quản lý bài viết</h2>
        <div class="mt-1">
            Admin: <strong>@Session["AdminHoTen"]</strong>
        </div>
    </div>

    <div class="container">

        <h3 class="mb-4">Danh sách bài viết</h3>

        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Tác giả</th>
                    <th>Ảnh</th>
                    <th>Nội dung</th>
                    <th>Ngày đăng</th>
                    <th>Lượt thích</th>
                    <th>Bình luận</th>
                    <th>Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>
                            <strong>@b.NguoiDung.TenNguoiDung</strong>
                        </td>

                        <td>
                            @if (!string.IsNullOrEmpty(b.AnhUrl))
                            {
                                <img src="/Images/BaiViet/@b.AnhUrl"
                                     style="width:70px;height:70px;object-fit:cover;"
                                     class="rounded" />
                            }
                            else
                            {
                                <span class="text-muted">Không có ảnh</span>
                            }
                        </td>

                        <td style="max-width:250px;">
                            @if (!string.IsNullOrEmpty(b.NoiDung))
                            {
                                @b.NoiDung.Substring(0, Math.Min(80, b.NoiDung.Length))
                            }
                        </td>

                        <td>@b.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>@b.ThichBaiDangs.Count()</td>

                        <td>@b.BinhLuans.Count()</td>

                        <td>
                            <a href="@Url.Action("ChiTietBaiViet", new { id = b.BaiDangID })"
                               class="btn btn-sm btn-info text-white">Xem</a>

                            <a href="@Url.Action("XoaBaiViet", new { id = b.BaiDangID })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bạn chắc chắn muốn xóa bài viết này?');">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4 mb-5">
            <a href="@Url.Action("Admin", "HIOTFZone")" class="btn btn-secondary px-4 py-2">
                ⬅ Quay lại trang Admin
            </a>
        </div>

    </div>

</body>
</html>
